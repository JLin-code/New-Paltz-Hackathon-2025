{
  "name": "new-paltz-hackathon-2025",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "client",
    "server",
    "database"
  ],
  "scripts": {
    "dev": "concurrently \"npm:dev:client\" \"npm:dev:server\"",
    "dev:client": "npm --prefix client run dev",
    "dev:server": "nodemon  /server/index.js --watch server",
    "start": "node server/index.js",
    "build": "npm --prefix client install && npm --prefix client run build",
    "install:all": "npm install && npm --prefix client install"
  },
  "dependencies": {
    "express": "^5.1.0",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "nodemon": "^3.1.10",
    "unplugin-vue-router": "^0.16.1",
    "dotenv": "^17.2.3"
  }
}