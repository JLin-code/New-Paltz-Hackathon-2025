{
  "name": "new-paltz-hackathon-2025",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "client",
    "server",
    "database"
  ],
  "scripts": {
    "dev": "concurrently \"npm:dev:client\" \"npm:dev:server\"",
    "dev:client": "npm --prefix client run dev",
    "dev:server": "nodemon  /server/index.js --watch server",
    "start": "node server/index.js",
    "build": "npm --prefix client run build",
    "install:all": "npm install && npm install --prefix client install"
  },
  "dependencies": {
    "express": "^4.18.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "concurrently": "^8.2.2",
    "unplugin-vue-router": "^0.16.1"
  }
}
